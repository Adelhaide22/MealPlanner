@using MealPlanner.Models.ViewModels
@{
    Layout = "_Layout";
}

@inject NavMenuViewModel navMenu;

<div class="container">
    <div class="row justify-content-around">
        <div class="col-4">
            <a asp-action="AddRecipe" class="btn btn-info mb-3" role="button">Add new recipe</a>
            
            @foreach (var m in navMenu.Categories)
            {
                <ul class="list-group">
                    <li class="list-group-item list-group-item-dark" style="padding-bottom: 12px;">@m.CategoryName</li>
                    @foreach (var r in m.RecipesCategories.Where(rc => rc.CategoryId == m.CategoryId))
                    {
                        <li class="list-group-item">
                            <a asp-controller="Recipe" asp-action="GetRecipe" asp-route-recipeId="@r.RecipeId" style="text-decoration: none; color: black">@r.Recipe.Name</a>
                        </li>
                    }
                </ul>
            }
        </div>
        @RenderBody()
    </div>
</div>
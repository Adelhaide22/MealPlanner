@model MealPlanner.Models.Recipe
@{
    Layout = "_RecipesLayout";  
}

<div class="col-6">
    <h2 class="text-center">Please confirm deletion</h2><br/>
    <h3 class="text-center">@Model.Name</h3><br/>
    <div class="container">
        <div class="row justify-content-around">
            <a asp-action="GetRecipe" asp-route-recipeId="@Model.RecipeId" class="btn btn-secondary">Cancel</a>
            <form asp-route="/DeleteRecipe/{@Model.RecipeId}" method="post">
                <input type="submit" onclick="alert('Successfully deleted')" class="btn btn-info" value="Delete" />
            </form>
        </div>
    </div>
</div>

<div class="col-6">
    <h2 class="badge-info text-center"></h2><br/>
</div>